{
  "printWidth": 80,
  "useTabs": false,
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "none",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "requirePragma": false,
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "parser": "babel-ts",
        "tabWidth": 2,
        "printWidth": 80,
        "trailingComma": "es5"
      }
    },
    {
      "files": "*.js",
      "options": {
        "parser": "babel",
        "tabWidth": 2,
        "printWidth": 80,
        "trailingComma": "es5"
      }
    },
    {
      "files": "*.md",
      "options": {
        "parser": "markdown",
        "tabWidth": 2,
        "embeddedLanguageFormatting": "auto"
      }
    }
  ]
}
