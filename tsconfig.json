{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./out-tsc",
    "sourceMap": true,
    "target": "ES2018",
    "lib": [
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ES2021",
      "ES2022"
    ],
    "types": ["node"]
  },
  "typeRoots": ["node_modules/@types"],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
