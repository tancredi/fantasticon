{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "lib": ["ESNext"],
    "outDir": "dist/esm",
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "sourceMap": true,
    "target": "ES2020",
    "types": ["node"]
  },
  "typeRoots": ["node_modules/@types"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/__mocks__/*.ts",
    "src/**/__tests__/*.ts"
  ]
}
