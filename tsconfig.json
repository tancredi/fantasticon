{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "types": ["node", "jest"]
  },
  "typeRoots": ["node_modules/@types"],
  "exclude": [
    "node_modules",
    "lib",
    "src/**/__mocks__/*.ts",
    "src/**/__tests__/*.ts"
  ],
  "include": ["src/**/*.ts"]
}
